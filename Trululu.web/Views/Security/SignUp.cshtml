@model Trululu.web.ViewModels.SignUpViewModel

@section title {
    Inscription
}

@section styles {
    <link rel="stylesheet" href="~/styles/security.css"/>
}

<main>
    <div class="box-form box-large">
        <h2>Inscription</h2>
        <form asp-action="SignUp">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-3">
                        <div class="box-icon-input box-top">
                            <div class="icon-input"><i class="fas fa-id-card"></i></div>
                            <input asp-for="Name" placeholder="Nom" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <div class="box-icon-input box-top">
                            <div class="icon-input"><i class="fas fa-id-card"></i></div>
                            <input asp-for="FisrtName" placeholder="Prénom" />
                        </div>
                        <span asp-validation-for="FisrtName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <div class="box-icon-input box-top">
                            <div class="icon-input"><i class="fas fa-id-card"></i></div>
                            <input asp-for="Mail" placeholder="Adresse email" />
                        </div>
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>

            </div>
            <div class="row">
                <div class="col-md-5">
                    <div class="box-icon-input box-top">
                        <div class="icon-input"><i class="fas fa-id-card"></i></div>
                        <input asp-for="Address" placeholder="Adresse postale" />
                    </div>
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <div class="box-icon-input box-top">
                        <div class="icon-input"><i class="fas fa-id-card"></i></div>
                        <input asp-for="Phone" placeholder="Téléphone" />
                    </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <div class="box-icon-input box-top">
                        <div class="icon-input"><i class="fas fa-id-card"></i></div>
                        <input asp-for="DateOfBirth" placeholder="Date de naissance" />
                    </div>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="box-icon-input box-top">
                        <div class="icon-input"><i class="fas fa-lock"></i></div>
                        <input asp-for="Password" placeholder="Mot de passe" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                </div>
            </div>

            <div class="form-submit align-center">
                <input type="submit" value="Créer votre compte" class="btn btn-primary"/>
            </div>
            <p class="small">Vous possédez déjà un compte ? <a class="link-in-text" asp-controller="Security" asp-action="SignIn">Connectez-vous ici !</a></p>
        </form>
    </div>
</main>
